{
  "compilerOptions": {
    "target": "es6",
    "skipLibCheck": true,
    "module": "CommonJS",
    "outDir": "./dist",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "ts-node": {
    "files": true
  }
}
